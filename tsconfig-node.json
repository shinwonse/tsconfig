{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node tsconfig",
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}