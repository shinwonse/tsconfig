{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node tsconfig",
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}